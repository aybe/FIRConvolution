<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<LangVersion>9</LangVersion>
	</PropertyGroup>

	<ItemGroup>

		<Compile Include="$(SolutionDir)Assets\FIRConvolution\**\*.cs" />

		<PackageReference Include="Unity3D" Version="2.1.3" />

		<Reference Include="Unity.Burst">
			<HintPath>$(SolutionDir)$(UnityScriptAssembliesPath)\Unity.Burst.dll</HintPath>
			<Private>False</Private>
		</Reference>

		<Reference Include="Unity.Mathematics">
			<HintPath>$(SolutionDir)$(UnityScriptAssembliesPath)\Unity.Mathematics.dll</HintPath>
			<Private>False</Private>
		</Reference>

	</ItemGroup>

</Project>